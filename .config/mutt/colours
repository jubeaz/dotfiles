#
# Default colour definitions

color status        color51  default 
color attachment 	color51  default     # Colour for attachment headers
color bold 	        color51  default     # Highlighting bold patterns in the body of messages
color error 	    red   default     # Error messages printed by NeoMutt
color hdrdefault 	color51  default     # Default colour of the message header in the pager
color indicator 	black red       # Arrow or bar used to indicate the current item in a menu
color markers 	    red   default     # The "+" markers at the beginning of wrapped lines in the pager
color message 	    white default     # Informational messages
color normal 	    white default     # Default colour for all text
color options 	    color51  default     # The key letters in multi-choice questions
color progress 	    color51  default     # Visual progress bar
color prompt 	    color51  default     # A question
color search 	    color51  default     # Highlighting of words in the pager
color signature 	color51  default     # Email's signature lines (.sig)
color tilde 	    color51  default     # The "~" used to pad blank lines in the pager
color tree 	        red   default     # Thread tree drawn in the message index and attachment menu
color underline 	color51  default     # Highlighting underlined patterns in the body of messages
color warning 	    color51  default     # Warning messages
color quoted 	    red   default     # Text matching $quote_regex in the body of a message

# Colours for items in the index
color index brightcolor51  black ~N
color index brightgreen black "~N (~x hagbard\.davep\.org | ~h \"^In-[Rr]eply-[Tt]o: .*hagbard\.davep\.org\")"
color index red         black ~F
color index black       green ~T
color index brightblack black ~D
mono  index bold              ~N
mono  index bold              ~F
mono  index bold              ~T
mono  index bold              ~D
# Colour definitions when on a mono screen
#mono bold      bold
#mono underline underline
#mono indicator reverse
#
## Colours for items in the reader
#color header brightblack cyan "^(From|Subject):"
#color header red         cyan "^X-Junked-Because: "
#color header red         cyan "^X-Virus-hagbard: .* FOUND"
#mono  header bold             "^(From|Subject|X-Junked-Because|X-Virus-hagbard):"
#
## Colours for items in the index
#color index brightcolor51  black ~N
#color index brightgreen black "~N (~x hagbard\.davep\.org | ~h \"^In-[Rr]eply-[Tt]o: .*hagbard\.davep\.org\")"
#color index red         black ~F
#color index black       green ~T
#color index brightblack black ~D
#mono  index bold              ~N
#mono  index bold              ~F
#mono  index bold              ~T
#mono  index bold              ~D
#
## Highlights inside the body of a message.
#
## URLs
#color body brightcolor51  black "(http|https|ftp|news|telnet|finger)://[^ \">\t\r\n]*"
#color body brightcolor51  black "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"
#color body brightcolor51  black "news:[^ \">\t\r\n]*"
#mono  body bold              "(http|https|ftp|news|telnet|finger)://[^ \">\t\r\n]*"
#mono  body bold              "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"
#mono  body bold              "news:[^ \">\t\r\n]*"
#
## email addresses
#color body brightcolor51  black "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"
#mono  body bold              "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"
#
## Various smilies and the like
#color body brightgreen black "<[Gg]>"                                            # <g>
#color body brightgreen black "<[Bb][Gg]>"                                        # <bg>
#color body brightgreen black " [;:]-*[)>(<|]"                                    # :-) etc...
#color body brightcolor51  black "(^|[[:space:]])\\*[^[:space:]]+\\*([[:space:]]|$)" # *Bold* text.
#color body brightcolor51  black "(^|[[:space:]])_[^[:space:]]+_([[:space:]]|$)"     # _Underlined_ text.
#color body brightcolor51  black "(^|[[:space:]])/[^[:space:]]+/([[:space:]]|$)"     # /Italic/ text.
